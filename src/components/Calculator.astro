---
const buttonClass =
  "outline-offset-2 outline-neutral focus:outline-2 bg-neutral p-2 py-1 rounded-radius text-neutral-content text-2xl cursor-pointer bg-neutral";

const handler = "display += $el.dataset.digit";
---

<div
  x-data="{display:''}"
  class="inline-grid grid-rows-6 grid-cols-4 gap-1 justify-stretch"
>
  <input
    disabled
    x-model="display"
    class="bg-primary text-primary-content pr-2 text-lg text-end rounded-radius col-start-1 col-end-5"
    type="text"
  />
  <button @click="display = ''" class={buttonClass}>C</button>
  <button @click="display = display.slice(0, -1)" class={buttonClass}
    ><svg fill="var(--theme-neutral-content)" viewBox="0 0 24 24"
      ><path
        d="m22 6c0-.552-.448-1-1-1h-12.628c-.437 0-.853.191-1.138.523-1.078 1.256-3.811 4.439-4.993 5.815-.16.187-.241.419-.241.651 0 .231.08.463.24.651 1.181 1.38 3.915 4.575 4.994 5.835.285.333.701.525 1.14.525h12.626c.552 0 1-.448 1-1 0-2.577 0-9.423 0-12zm-13.628.5h12.128v11h-12.126l-4.715-5.51zm5.637 4.427 1.71-1.71c.146-.146.339-.219.531-.219.404 0 .75.324.75.749 0 .193-.073.384-.219.531l-1.711 1.711 1.728 1.728c.147.147.22.339.22.53 0 .427-.349.751-.75.751-.192 0-.384-.073-.531-.219l-1.728-1.729-1.728 1.729c-.146.146-.339.219-.531.219-.401 0-.75-.324-.75-.751 0-.191.073-.383.22-.53l1.728-1.728-1.788-1.787c-.146-.148-.219-.339-.219-.532 0-.425.346-.749.751-.749.192 0 .384.073.53.219z"
        fill-rule="nonzero"></path></svg
    ></button
  >
  <button @click={handler} data-digit="^" class={buttonClass}>^</button>
  <button @click={handler} data-digit="+" class={buttonClass}>+</button>
  <button @click={handler} data-digit="7" class={buttonClass}>7</button>
  <button @click={handler} data-digit="8" class={buttonClass}>8</button>
  <button @click={handler} data-digit="9" class={buttonClass}>9</button>
  <button @click={handler} data-digit="-" class={buttonClass}>-</button>
  <button @click={handler} data-digit="4" class={buttonClass}>4</button>
  <button @click={handler} data-digit="5" class={buttonClass}>5</button>
  <button @click={handler} data-digit="6" class={buttonClass}>6</button>
  <button @click={handler} data-digit="*" class={buttonClass}>*</button>
  <button @click={handler} data-digit="1" class={buttonClass}>1</button>
  <button @click={handler} data-digit="2" class={buttonClass}>2</button>
  <button @click={handler} data-digit="3" class={buttonClass}>3</button>
  <button @click={handler} data-digit="/" class={buttonClass}>/</button>
  <button @click={handler} data-digit="0" class={buttonClass}>0</button>
  <button @click={handler} data-digit="." class={buttonClass}>.</button>
  <button
    @click="display=String(eval(display.replaceAll('^','**')));"
    class={buttonClass +
      " col-span-2 bg-primary text-primary-content outline-primary"}>=</button
  >
</div>
