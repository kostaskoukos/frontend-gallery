---
interface Props {
  theme: string;
}
---

<button
  x-data
  data-theme={Astro.props.theme}
  @click="$store.theme.change($el.dataset.theme)"
  :class="$store.theme.val === $el.dataset.theme && 'bg-primary text-primary-content'"
  class="cursor-pointer p-2 rounded-radius"
  >{
    Astro.props.theme.charAt(0).toUpperCase() +
      String(Astro.props.theme.slice(1))
  }</button
>
